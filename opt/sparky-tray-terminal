#!/bin/bash

#  Sparky Repository Editor lets you edit repository lists
#  Created by Pawe≈Ç "pavroo" Pijanowski 2014/05/22
#  Copyright 2014, 2015 under the GNU GPL2 License
#  Last update 2015/02/28

testroot="`whoami`"

if [ "$testroot" != "root" ]; then
    echo "Must be root"
    exit 1
fi

if [ -f /opt/sparky/sparky-xterm ]; then
. /opt/sparky/sparky-xterm
else
SPARKYXTERM="x-terminal-emulator"
fi

$SPARKYXTERM

exit 1


